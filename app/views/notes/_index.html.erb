<link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />


<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
    <th>No</th>
      <th>Name</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for note in @notes %>
      <% @notes.each_with_index do |note,index| %>
      <tr>
       <td><%= index + 1 %></td>
        <td><%= note.name %></td>
        <td><%= note.body %></td>
        <td>
          <%= link_to "Show", note_path(note), :class => "btn btn-success btn-xs" %>
          <%= link_to "Edit", edit_note_path(note), :class => "btn btn-warning btn-xs" %>
          <%= link_to "Delete", note_path(note), :method => :delete, :class => "btn btn-danger btn-xs", :data => {:confirm => "Are you Sure!"} %>
        </td>
      </tr>
    <% end %>
        <% end %>
  </tbody>
</table>


 <script src="/assets/jquery.dataTables.min.js" type="text/javascript"></script>
<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>
